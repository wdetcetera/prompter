{
  "name": "@wpopera/prompter-language",
  "version": "1.0.1",
  "description": "A semantic language for creating consistent AI prompts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "preferGlobal": true,
  "author": {
    "name": "Domenico Rutigliano",
    "email": "info@wpopera.co"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wdetcetera/prompter.git"
  },
  "bugs": {
    "url": "https://github.com/wdetcetera/prompter/issues"
  },
  "homepage": "https://github.com/wdetcetera/prompter#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "bin": {
    "prompter": "./dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node src/cli/index.ts",
    "prepublishOnly": "yarn clean && yarn build"
  },
  "keywords": [
    "ai",
    "prompts",
    "semantic",
    "language",
    "compiler"
  ],
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/__tests__/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.36.3",
    "@types/dotenv": "^8.2.3",
    "@types/node": "^22.13.1",
    "axios": "^1.7.9",
    "cheerio": "^1.0.0",
    "dotenv": "^16.4.7",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "openai": "^4.83.0",
    "peggy": "^4.2.0",
    "simple-git": "^3.27.0",
    "typescript": "^5.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.23.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.20.0",
    "jest": "^29.7.0",
    "prettier": "^3.4.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  }
}
